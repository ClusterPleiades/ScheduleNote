<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- default
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->

        <!-- action bar -->
        <item name="colorPrimary">@color/colorAccent</item>

        <!-- status bar -->
        <item name="colorPrimaryDark">@color/colorAccent</item>

        <!-- colorAccent -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- activity background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- activity text -->
        <item name="android:textColor">@color/colorDrawText</item>
        <item name="android:textColorPrimary">@color/colorDrawText</item>

        <!-- line color -->
        <item name="android:listDivider">@color/colorItemSeparator</item>

        <!-- actionbar shadow -->
        <item name="elevation">0dp</item>

        <!-- navigation drawer item size -->
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- text hint color -->
        <item name="android:textColorHint">@color/colorProgressTextView</item>

        <!-- drawer item text size -->
        <item name="android:textSize">14sp</item>

        <!-- click(ripple) effect color -->
        <item name="colorControlHighlight">@color/colorRippleEffect</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- appbar theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">@color/colorRippleEffect</item>

        <!-- overflow icon color -->
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <!-- appbar popup theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorRippleEffect</item>
    </style>

    <!-- for alert dialog -->
    <style name="AppTheme.AlertDialogOverlay" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>

        <item name="android:textColor">@color/colorDrawText</item>
        <item name="android:textColorPrimary">@color/colorDrawText</item>

        <item name="colorControlHighlight">@color/colorRippleEffect</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
